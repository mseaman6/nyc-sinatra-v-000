<h1>Create a New Figure</h1>

<form action="/figures" method="POST">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">

  <br>
  <h3>Titles</h3>
  <%Title.all.each do |title|%>
    <%=title.name%><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"></input><br>
  <%end%>
  <br>
  <h3>Create New Title:</h3><br>
    <input type="text" name="title[name]" id="new_title">
  <br>

  <br>
  <h3>Landmarks</h3><br>
  <%Landmark.all.each do |landmark|%>
    <%=landmark.name%><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"></input><br>
  <%end%>
  <br>
  <h3>Create New Landmark:</h3>
    <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark">
    <label>Year: </label><input type="text" name="landmark[year_completed]" id="new_landmark_year_completed">

  <input type="submit" value="Create New Figure">
</form>
